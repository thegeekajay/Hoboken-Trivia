<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44a1f2"
    tools:context="com.example.hobokentrivia.QuestionActivity" > 
    <!-- android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" -->

                
     <LinearLayout
         android:id="@+id/LinearLayout1"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_above="@id/button1"
         android:layout_below="@id/textView2"
         android:layout_centerInParent="true"
         android:layout_marginTop="25dp"
         android:gravity="center"
         android:orientation="vertical"
         android:padding="5dp" >

 <Button
     android:id="@+id/button4"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button5"
     android:layout_below="@+id/button3"
     android:layout_marginBottom="10dp" 
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice3"
     android:textAllCaps="false"
     android:textSize="14dp"
     android:textColor="#FFFFFF"     
     android:width="200dp" />

 <Button
     android:id="@+id/button5"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button1"
     android:layout_below="@+id/button4"
     android:layout_marginBottom="10dp"
     android:textSize="14dp"
     android:background="@drawable/button" 
     android:onClick="result"
     android:text="Choice 4"     
     android:textColor="#FFFFFF" />


 <Button
     android:id="@+id/button3"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button4"
     android:layout_below="@+id/button2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:textSize="14dp"
     android:onClick="result"
     android:text="Choice2"     
     android:textColor="#FFFFFF" />

 <Button
     android:id="@+id/button2"
     android:layout_width="fill_parent"
     android:layout_height="45dp"
     android:layout_above="@+id/button3"
     android:layout_below="@+id/textView2"
     android:layout_marginBottom="10dp"
     android:background="@drawable/button" 
     android:textSize="14dp"
     android:onClick="result"
     android:text="Choice1"
     android:textColor="#FFFFFF" />
 
 </LinearLayout>
           
  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="match_parent"
      android:layout_height="160dp"
      android:layout_alignLeft="@+id/imageButton"
      android:layout_alignRight="@+id/LinearLayout1"
      android:layout_below="@+id/timer"
      android:layout_marginTop="45dp"
      android:src="@drawable/questionholder" />

  <TextView
      android:id="@+id/textView1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@+id/imageButton"
      android:layout_centerHorizontal="true"
      android:text="Question 1"
      android:layout_marginTop="55dp"
       android:textColor="#008BFF"
      android:textSize="30dp" />

  <TextView
      android:id="@+id/textView2"
      android:layout_width="250dp"
      android:layout_height="80dp"
      android:layout_below="@+id/textView1"
      android:layout_centerHorizontal="true"
      android:textColor="#ff444444"
      android:gravity="center"
      android:textSize="15sp" />

 	  <Button
     android:id="@+id/button1"
     android:layout_width="120dp"
     android:layout_height="60dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button_custom"
     android:onClick="OnClickNextQuestion"
     android:text="Next Question"
     android:textSize="15sp"
     android:textColor="#FFFFFF" />
  
  <Button
     android:id="@+id/button6"
     android:layout_width="120dp"
     android:layout_height="50dp"
     android:layout_alignParentBottom="true"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="30dp"
     android:background="@drawable/button_custom"
     android:onClick="score"
     android:textSize="15sp"
     android:text="View Score"
     android:textColor="#FFFFFF" /> 
     
     <Button
     android:id="@+id/button7"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/pause"
     android:onClick="pause"
     android:textColor="#FFFFFF" />
     
     <Button
     android:id="@+id/button8"
     android:layout_width="40dp"
     android:layout_height="40dp"
     android:layout_alignParentTop="true"
     android:layout_alignParentRight="true"
     android:layout_alignParentEnd="true"
     android:layout_marginBottom="10dp"
     android:background="@drawable/playbutton" 
     android:onClick="resume"
     android:textColor="#FFFFFF" />

     <Button
         android:id="@+id/fifty_fifty"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/button1"
         android:layout_alignBottom="@+id/button1"
         android:layout_toRightOf="@+id/textView1"
         android:onClick="fiftyFifty"
         android:text="fifty-fifty" />

     <TextView
         android:id="@+id/timer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageButton"
         android:layout_alignTop="@+id/imageButton"
         android:layout_toRightOf="@+id/imageButton"
         android:textSize="20dp" />

     <ImageButton
         android:id="@+id/imageButton"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignParentTop="true"
         android:background="@drawable/ornghome"
         android:onClick="onHome" />

     <ImageButton
         android:id="@+id/controlMusic"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignLeft="@+id/fifty_fifty"
         android:layout_alignParentTop="true"
         android:onClick="onSetMusic" />

     <ImageView
         android:id="@+id/coinmeter"
         android:layout_width="160dp"
         android:layout_height="40dp"
         android:layout_below="@+id/translucentActivity"
         android:layout_toLeftOf="@+id/controlMusic"
         android:layout_marginTop="45dp"
         android:background="@drawable/coinsmeter" />

     <TextView
         android:id="@+id/coinscounter"
		 android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_marginTop="57dp"
         android:layout_centerHorizontal="true"/>
         
           <Button
         android:id="@+id/button9"
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:background="@drawable/button"
          android:layout_alignParentRight="true"
          android:layout_below="@+id/button7"
         android:textColor="#FFFFFF" 
         android:onClick="exit"
         android:text="Exit" />
         

     <Button
     	android:id="@+id/temp_play_btn"
    	android:layout_width="40dp"
    	android:layout_height="40dp"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentRight="true"
    	android:layout_alignParentEnd="true"
     	android:layout_marginBottom="10dp"
     	android:background="@drawable/pause"
     	android:onClick="pause"
     	android:textColor="#FFFFFF" />

     <TextView
         android:id="@+id/translucent"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#aa000000"
         android:clickable="true"
         android:onClick="coachMarks"
         android:textColor="#CCFF0000" />

     <ImageView
         android:id="@+id/straightarrow"
         android:layout_width="60dp"
         android:layout_height="50dp"
         android:layout_above="@+id/numbofcoins"
         android:layout_below="@+id/coinmeter"
         android:layout_centerHorizontal="true"
         android:src="@drawable/straightarrow" />

     <ImageView
         android:id="@+id/arrowup1"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_alignParentLeft="true"
         android:layout_alignTop="@+id/coinmeter"
         android:src="@drawable/straightarrow" />

     <TextView
         android:id="@+id/resume_play"
         android:layout_width="120dp"
         android:layout_height="120dp"
         android:layout_alignLeft="@+id/controlMusic"
         android:layout_alignTop="@+id/textView1"
         android:fontFamily="sans-serif"
         android:text="pause/resume the game if playing with time limit"
         android:textColor="#fdfbfb" />

     <ImageView
         android:id="@+id/arrow"
         android:layout_width="60dp"
         android:layout_height="60dp"
         android:layout_above="@+id/resume_play"
         android:layout_toRightOf="@+id/coinmeter"
         android:src="@drawable/arrow" />

      <TextView
          android:id="@+id/eliminate_wrong_answers"
          android:layout_width="140dp"
          android:layout_height="60dp"
          android:layout_alignLeft="@+id/tap_to_dismiss"
          android:layout_below="@+id/LinearLayout1"
          android:fontFamily="sans-serif"
          android:text="Eliminates two out of four answers, if you have 3 coins!"
          android:textColor="#fdfbfb" />

      <ImageView
          android:id="@+id/line"
          android:layout_width="2dp"
          android:layout_height="10dp"
          android:layout_alignLeft="@+id/quickTutorial"
          android:layout_alignRight="@+id/quickTutorial"
          android:layout_below="@+id/quickTutorial"
          android:src="@drawable/line" />

      <ImageView
          android:id="@+id/mute_arrow"
          android:layout_width="40dp"
          android:layout_height="20dp"
          android:layout_alignParentTop="true"
          android:layout_toLeftOf="@+id/controlMusic"
          android:src="@drawable/arrowright" />

      <TextView
          android:id="@+id/mute_text"
          android:layout_width="40dp"
          android:layout_height="20dp"
          android:layout_alignLeft="@+id/coinscounter"
          android:layout_alignParentTop="true"
          android:fontFamily="sans-serif"
          android:text="Mute"
          android:textColor="#fdfbfb" />

      <ImageView
          android:id="@+id/arrowright"
          android:layout_width="60dp"
          android:layout_height="60dp"
          android:layout_alignBottom="@+id/fifty_fifty"
          android:layout_alignRight="@+id/textView1"
          android:src="@drawable/arrowright" />

      <TextView
          android:id="@+id/quickTutorial"
          android:layout_width="150dp"
          android:layout_height="90dp"
          android:layout_alignRight="@+id/coinscounter"
          android:layout_below="@+id/imageView1"
          android:fontFamily="sans-serif"
          android:text="Quick Tutorial"
          android:textColor="#fdfbfb"
          android:textSize="35dp" />

      <TextView
          android:id="@+id/tap_to_dismiss"
          android:layout_width="200dp"
          android:layout_height="20dp"
          android:layout_alignLeft="@+id/line"
          android:layout_below="@+id/line"
          android:fontFamily="sans-serif"
          android:text="Tap anywhere to dismiss"
          android:textColor="#fdfbfb" />

      <TextView
          android:id="@+id/backhome"
          android:layout_width="120dp"
          android:layout_height="40dp"
          android:layout_alignBaseline="@+id/textView1"
          android:layout_alignBottom="@+id/textView1"
          android:layout_alignParentLeft="true"
          android:fontFamily="sans-serif"
          android:text="Tap here to go to the Home screen"
          android:textColor="#fdfbfb" />

      <TextView
          android:id="@+id/numbofcoins"
          android:layout_width="70dp"
          android:layout_height="70dp"
          android:layout_above="@+id/quickTutorial"
          android:layout_alignLeft="@+id/straightarrow"
          android:layout_alignRight="@+id/tap_to_dismiss"
          android:fontFamily="sans-serif"
          android:text="This show the number of coins you own"
          android:textColor="#fdfbfb" />
        
        <Button
        android:id="@+id/button10"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/button_custom"
        android:textSize="15sp"
        android:text="Rate"
        android:textColor="#FFFFFF"
        android:layout_alignBottom="@+id/fifty_fifty"
        android:layout_toLeftOf="@+id/coinmeter"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton" />

</RelativeLayout>
